#!/bin/bash -eu

# formatting
isort .
black .

# misc "best practices" checks
flake8 src tests
bandit -c pyproject.toml -r -q .
safety check -i 51457 -i 51549 | grep "Scan was completed"
mypy -p src
mypy -p tests

# tests
pytest --cov-fail-under=100 --random-order -q --no-summary
mutmut run --simple-output | tail -1
